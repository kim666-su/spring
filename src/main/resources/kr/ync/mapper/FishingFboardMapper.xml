   <sql id="criteria">
      <trim prefix="(" suffix=") AND " prefixOverrides="OR">
         <foreach item='type' collection="typeArr">
            <trim prefix="OR">
               <choose>
                  <when test="type == 'T'.toString()">
                     title like '%'||#{keyword}||'%'
                  </when>
                  <when test="type == 'C'.toString()">
                     content like '%'||#{keyword}||'%'
                  </when>
                  <when test="type == 'W'.toString()">
                     writer like '%'||#{keyword}||'%'
                  </when>
               </choose>
            </trim>
         </foreach>
      </trim>
   </sql>
   
   <select id="getList" resultType="kr.ync.domain.BoardVO">
   <![CDATA[
      select * from tbl_free_board where board_idx > 0 
      ]]>
   </select>
   
   <insert id="insert">
 	  insert into tbl_free_board (board_idx, id, title, nick, content, recom_up, recom_dawn)
      values (seq_free_board.nextval, #{id}, #{title}, #{nick}, #{content}, #{recom_up}, #{recom_dawn})
   </insert>
   
   <insert id="insertSelectKey">

      <selectKey keyProperty="board_idx" order="BEFORE"
         resultType="Long">
         select seq_board.nextval from dual
      </selectKey>

      insert into tbl_free_board (board_idx,title,content,nick, file_1, file_2, file_3)
      values (#{board_idx},
      #{title}, #{content}, #{nick}, #{file_1}, #{file_2}, #{file_3})
   </insert>
   
   <select id="read" resultType="kr.ync.domain.BoardVO">
      select * from tbl_free_board where board_idx =   #{board_idx}
   </select>


   <delete id="delete">
      delete tbl_free_board where board_idx = #{board_idx}
   </delete>
 
   <update id="update">
      update tbl_free_board
      set title= #{title},
      content=#{content},
      d_date = sysdate
      where board_idx =
      #{board_idx}
   </update>
   
